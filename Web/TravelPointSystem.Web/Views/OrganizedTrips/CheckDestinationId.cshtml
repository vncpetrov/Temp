@model TravelPointSystem.Web.ViewModels.OrganizedTrips.OrganizedTripsByDestinationIdInputModel
@{
    this.ViewData["Title"] = "Organized Trips";

    var destinationItems = Model.DestinationItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="text-center mt-5 mb-3 h1">@this.ViewData["Title"]</div>

<form method="post" class="col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="DestinationId" class="control-label"></label>
        <select asp-for="DestinationId" class="form-control" asp-items="destinationItems"></select>
        <span asp-validation-for="DestinationId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfTourists" class="control-label"></label>
        <input asp-for="NumberOfTourists" class="form-control" />
        <span asp-validation-for="NumberOfTourists" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>