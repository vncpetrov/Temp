@using TravelPointSystem.Common
@model TravelPointSystem.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Travel Point";
}

<div class="row mb-5 justify-content-between align-items-center text-white text-center home-banner-container">
    <div class="col-md-6 px-5 home-banner-text">
        <div class="mb-3 h1 font-weight-bold home-banner-text-title">
            World wide B2B booking engine
        </div>
        <p class="h4">Take your business to a new level by using our modern, fast and user-friendly system</p>
    </div>
    <div class="col-md-5 home-banner-join">
        <h3 class="pb-2">Join our community now!</h3>
        <div class="home-banner-join-buttons">
            <p><a class="btn btn-link" asp-controller="Home" asp-action="About">Learn about us</a></p>
            <p><a class="btn btn-primary" href="/Identity/Account/Register">Register</a></p>
        </div>
    </div>
</div>


<div class="display-4 my-5 text-center our-products-title">What we offer</div>

<div class="mx-3 home-carousel-products">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <img class="img-fluid" src="~/img/Luggage.jpg">
                            <div class="card-body">
                                <h4 class="card-title">Organized Trips</h4>
                                <p class="card-text">Access to @Model.DestinationsCount destinations worldwide!</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <img class="img-fluid" src="~/img/Hotels.jpg">
                            <div class="card-body">
                                <h4 class="card-title">Hotels</h4>
                                <p class="card-text">Over @Model.HotelsCount hotels worldwide!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <img class="img-fluid" src="~/img/Buses.jpg">
                            <div class="card-body">
                                <h4 class="card-title">Buses</h4>
                                <p class="card-text">Book bus tickets for regular and low-cost in Europe!</p>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <img class="img-fluid" src="~/img/Planes.png">
                            <div class="card-body">
                                <h4 class="card-title">Planes</h4>
                                <p class="card-text">Book air tickets for regular and low-cost airlines worldwide!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

