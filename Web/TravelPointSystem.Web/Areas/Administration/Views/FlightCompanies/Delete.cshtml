@model TravelPointSystem.Web.ViewModels.FlightCompanies.FlightCompanyViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center mt-5 mb-3 h1">@this.ViewData["Title"]</div>
<div class="text-center mt-5 mb-3 h3">Are you sure you want to delete this?</div>

<div>
    <h4>FlightCompany</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
    </dl>

    <form class="text-center" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger px-5" />
    </form>
</div>
