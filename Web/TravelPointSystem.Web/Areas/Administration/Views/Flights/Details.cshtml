@model TravelPointSystem.Web.ViewModels.Flights.FlightViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="text-center mt-5 mb-3 h1">@this.ViewData["Title"]</div>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PricePerPerson)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.PricePerPerson)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureDateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartPoint)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartPoint.Town), @Html.DisplayFor(model => model.StartPoint.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartPointAirPort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartPointAirPort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndPoint)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndPoint.Town), @Html.DisplayFor(model => model.EndPoint.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndPointAirPort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndPointAirPort)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReservationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReservationType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeletedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeletedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedOn)
        </dd>
    </dl>
</div>
<div class="text-center"><a class="btn btn-outline-primary px-5" asp-action="Edit" asp-route-id="@Model.Id">Edit</a></div>

