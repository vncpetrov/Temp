@model TravelPointSystem.Web.ViewModels.Buses.BusViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center mt-5 mb-3 h1">@this.ViewData["Title"]</div>

<h4 class="text-center">Bus</h4>
<hr />
<div class="row">
    <form class="col-md-6 offset-md-3" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="BusNumber" class="control-label"></label>
            <input asp-for="BusNumber" class="form-control" />
            <span asp-validation-for="BusNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PricePerPerson" class="control-label"></label>
            <input asp-for="PricePerPerson" class="form-control" />
            <span asp-validation-for="PricePerPerson" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DepartureDateTime" class="control-label"></label>
            <input asp-for="DepartureDateTime" class="form-control" />
            <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TravellingTime" class="control-label"></label>
            <input asp-for="TravellingTime" class="form-control" />
            <span asp-validation-for="TravellingTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AvailableSeats" class="control-label"></label>
            <input asp-for="AvailableSeats" class="form-control" />
            <span asp-validation-for="AvailableSeats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartPointId" class="control-label"></label>
            <select asp-for="StartPointId" class="form-control" asp-items="ViewBag.StartPointId"></select>
            <span asp-validation-for="StartPointId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartPointStation" class="control-label"></label>
            <input asp-for="StartPointStation" class="form-control" />
            <span asp-validation-for="StartPointStation" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndPointId" class="control-label"></label>
            <select asp-for="EndPointId" class="form-control" asp-items="ViewBag.EndPointId"></select>
            <span asp-validation-for="EndPointId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndPointStation" class="control-label"></label>
            <input asp-for="EndPointStation" class="form-control" />
            <span asp-validation-for="EndPointStation" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

