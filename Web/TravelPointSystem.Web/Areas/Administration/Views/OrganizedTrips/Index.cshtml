@model IEnumerable<TravelPointSystem.Web.ViewModels.OrganizedTrips.OrganizedTripViewModel>

@{
    ViewData["Title"] = "All Organized Trips";
}

<div class="text-center mt-5 mb-3 h1">@this.ViewData["Title"]</div>


<p class="text-center">
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
<div class="row my-5 d-flex justify-content-center">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr class="bg-info text-white">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PricePerPerson)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartureDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReturnDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Destination)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hotel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Transport)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AvailableSeats)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsDeleted)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.PricePerPerson)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartureDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Destination.Town), @Html.DisplayFor(modelItem => item.Destination.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hotel.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Transport)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvailableSeats)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsDeleted)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>